<% set_meta_tags title: t('.topic') %>
<div class="conteiner">
    <div class="row">
        <div class="col-lg-6 offset-lg-3 p-0">
            <h1 class="text-center mt-5"><%= t('.topic') %></h1>
            <% if @notifications.present? %>
                <div class="text-center">
                    <%= render @notifications %>
                </div>
            <% else %>
                <h4 class="text-center m-4">通知はありません</h4>
            <% end %>
        </div>
        <%= paginate @notifications %>
    </div>
</div>