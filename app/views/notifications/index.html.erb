<% content_for(:topic, t('.topic')) %>
<div class="conteiner">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <h1 class="text-center mt-5"><%= t('.topic') %></h1>
            <div class="mt-3">
                <% if @notifications.present? %>
                    <div class="text-center">
                        <%= render @notifications %>
                    </div>
                <% else %>
                    <h4 class="text-center">通知はありません</h4>
                <% end %>
            </div>
        </div>
    </div>
</div>