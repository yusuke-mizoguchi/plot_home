<div class="col-sm-12 col-lg-12 mb-3">
  <div id="novel-id-<%= novel.id %>">
    <div class="card">
      <div class="card-body">
        <div class="card-title">
          <%= link_to novel.title.truncate(38), novel_path(novel), class: 'h3' %>
          <% if current_user&.own?(novel) %>
            <%= render 'crud_menus', novel: novel %>
          <% end %>
        </div>
        <ul class="list-inline">
          <li class="list-inline-item mr-4">
            <%= novel.genre_i18n %>
          </li>
          <li class="list-inline-item mr-4">
            <%= novel.story_length_i18n %>
          </li>
          <li class="list-inline-item mr-4">
            <i class="fa-solid fa-user"></i>
            <%= link_to novel.user.name, user_path(novel.user.id) %>
          </li>
          <li class="list-inline-item mb-3">
            <i class="fa-solid fa-calendar-days"></i>
            <%= novel.created_at.to_s(:datetime_jp) %>
          </li>
          <li>
            <%= strip_tags(novel.plot.to_s).gsub(/[\n]/,"").strip.truncate(103) %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>