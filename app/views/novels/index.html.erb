<%= stylesheet_link_tag "novels/index" %>
<% set_meta_tags title: t('.topic') %>
<div class="container pt-3">
  <div class="m-4">
      <!-- 検索フォーム -->
      <%= render 'search', url: novels_path %>
  </div>

  <!-- 掲示板一覧 -->
  <div class="row mb-5">
    <div class="col-md-12">
      <div class="row">
        <% if @novels.present? %>
          <%= render @novels %>
        <% else %>
          <p class="text-center"><%= t('.no_result') %></p>
        <% end %>
        <%= paginate @novels %>
      </div>
    </div>
  </div>
</div>
