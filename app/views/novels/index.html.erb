<% content_for(:topic, t('.topic')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1 mt-4">
      <!-- 検索フォーム -->
      <%= render 'search', url: novels_path %>
    </div>
  </div>

  <!-- 掲示板一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @novels.present? %>
          <%= render @novels %>
        <% else %>
          <p><%= t('.no_result') %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= paginate @novels %>
