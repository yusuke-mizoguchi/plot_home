<tr id="review-<%= review.id %>">
  <td>
    <h3 class="small"><%= link_to review.user.name, user_path(review.user.id) %></h3>
    <div id="js-review-<%= review.id %>">
      良い点
      <%= simple_format(review.good_point) %>
      改善点
      <%= simple_format(review.bad_point) %>
    </div>
  </td>

  <% if current_user.own?(review) %>
    <td class="action">
      <ul class="list-inline justify-content-center" style="float: right;">
        <li class="list-inline-item">
          <%= link_to "#", class: "js-edit-review-button", remote: true do %>
            <i class="fa-solid fa-pen-fancy"></i>
          <% end %>
        </li>
        <li class="list-inline-item">
          <%= link_to review_path(review), class: "js-delete-review-button",
          data: { confirm: t('defaults.message.delete_confirm') }, 
          method: :delete, remote: true do %>
          <i class="fa-solid fa-trash"></i>
          <% end %>
        </li>
      </ul>
    </td>
  <% end %>
</tr>