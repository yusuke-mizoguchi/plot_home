<div class="container mt-4 mb-4" id="review-form">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
        <%= form_with[novel, review],  local: false) do |f| %>
          <div class="form-group">
            <%= f.label :good_point %>
            <%= f.text_field :good_point, class: 'form-control', id: 'js-new-review-good_point', rows: 5 %>
          </div>
          <div class="form-group">
            <%= f.label :bad_point %>
            <%= f.text_field :bad_point, class: 'form-control', id: 'js-new-review-bad_point', rows: 5 %>
          </div>


          <%= f.submit class: 'btn btn-primary' %>
        <% end %>
    </div>
  </div>
</div>
