<div class="container float-start p-0 ml-3">
      <ul class="list-inline">
        <%= form_with model: [@novel, @review], id: "js-new-reply", local: false do |f| %>
          <div class="form-group">
            <%= f.hidden_field :parent_id, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.hidden_field :good_point, class: 'form-control', value: 'Reply' %>
          </div>
          <li class="list-inline-item">
            <div class="form-group">
              <%= f.text_field :comment, class: 'form-control', id: 'js-new-review-comment' %>
            </div>
          </li>

          <li class="list-inline-item">
            <div class="text-center">
              <%= f.submit (t '.comment'), class: 'btn btn-primary' %>
              <%= link_to (t 'defaults.cancel'), novel_path(@novel), class: 'btn btn-secondary' %>
            </div>
          </li>
        <% end %>
      <ul>
</div>
