<% set_meta_tags title: t('.topic') %>
<div class="container">
  <div class="row">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1 class="mt-5 mb-4"><%= t('.topic') %></h1>
      <%= form_with url: login_path, local: true do |f| %>
        <div class="form-group">
          <%= f.label :email, User.human_attribute_name(:email) %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password, User.human_attribute_name(:password) %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="form-group text-center mt-5">
          <%= check_box_tag :remember, params[:remember], true %>
          <%= label_tag (t'.remember') %>
        </div>
        <div class="actions mb-5 text-center">
          <%= f.submit (t '.topic'), class: 'btn btn-primary' %>
        </div>
      <% end %>
      <div class='text-center mb-5'>
        <%= link_to (t '.to_register_page'), new_user_path, class:'mr-4' %>
        <%= link_to (t '.password_forget'), new_password_reset_path %>
      </div>
    </div>
  </div>
</div>