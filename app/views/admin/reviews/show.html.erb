<% content_for(:title, t('.topic')) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t('.topic') %></h1>
      <div class="text-right mb-3">
        <%= link_to t('defaults.edit'), edit_admin_review_path(@review), class: 'btn btn-success' %>
        <%= link_to t('defaults.delete'), admin_review_path(@review), method: :delete, data: { confirm: t('defaults.message.delete_confirm') }, class: 'btn btn-danger' %>
      </div>
      <table class="table table-bordered bg-white">
        <tr>
          <th scope="row"><%= Review.human_attribute_name(:id) %></th>
          <td><%= @review.id %></td>
        </tr>
        <tr>
          <th scope="row"><%= Review.human_attribute_name(:good_point) %></th>
          <td><%= @review.good_point %></td>
        </tr>
        <tr>
          <th scope="row"><%= Review.human_attribute_name(:bad_point) %></th>
          <td><%= @review.bad_point %></td>
        <tr>
          <th scope="row"><%= Review.human_attribute_name(:created_at) %></th>
          <td><%= @review.created_at.to_s(:datetime_jp) %></td>
        </tr>
      </table>
    </div>
  </div>
</div>