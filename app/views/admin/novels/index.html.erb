<% content_for(:title, t('.topic')) %>
<div class="container mb-5 pt-2">
  <h1><%= t('.topic') %></h1>
  <div class="row">
    <div class="col-md-12 mb-3">
      <%= render 'search_form' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col"><%= Novel.human_attribute_name(:id) %></th>
          <th scope="col"><%= Novel.human_attribute_name(:title) %></th>
          <th scope="col"><%= Novel.human_attribute_name(:user) %></th>
          <th scope="col"><%= Novel.human_attribute_name(:created_at) %></th>
          <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        <%= render @novels %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <!-- ページネーション -->
      <%= paginate @novels %>
    </div>
  </div>
</div>